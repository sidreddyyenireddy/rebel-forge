{
  "name": "rebel-forge",
  "version": "1.0.3",
  "author": { "name": "Sidharth Yenireddy", "email": "you@example.com" },
  "build": {
    "productName": "RebelForge",
    "appId": "com.rebelforge.app",

    "files": [
      "!dist/**",
      "!**/{test,tests}/**",
      "!**/{doc,docs}/**",
      "!**/examples/**"
    ],

    "extraResources": [
      {
        "from": "resources/pyscf",
        "to": "resources/pyscf",
        "filter": [
          "**/*",
          "!**/examples/**",
          "!**/doc/**",
          "!**/docs/**",
          "!**/doc_legacy/**",
          "!**/*.md"
        ]
      },
      {
        "from": "resources/skala",
        "to": "resources/skala",
        "filter": [
          "**/*",
          "!**/examples/**",
          "!**/docs/**",
          "!**/*.md"
        ]
      }
    ],

    "asar": true,
    "asarUnpack": ["**/*.node"],

    "mac": {
      "target": [{ "target": "zip", "arch": ["arm64", "x64"] }],
      "artifactName": "RebelForge-${version}-mac-${arch}.${ext}"
    },

    "win": {
      "target": [{ "target": "nsis", "arch": ["x64"] }],
      "artifactName": "RebelForge-${version}-win-x64.${ext}"
    },

    "linux": {
      "target": ["AppImage", "deb"],
      "maintainer": "Sidharth Yenireddy <you@example.com>",
      "category": "Science",
      "artifactName": "RebelForge-${version}-linux-${arch}.${ext}"
    },

    "publish": [
      { "provider": "github", "owner": "sidreddyyenireddy", "repo": "rebel-forge" }
    ]
  }
}
