{
  "name": "rebel-forge",
  "version": "1.0.2",
  "description": "Desktop quantum chemistry and visualization app (Electron)",
  "homepage": "https://github.com/sidreddyyenireddy/rebel-forge#readme",
  "bugs": {
    "url": "https://github.com/sidreddyyenireddy/rebel-forge/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidreddyyenireddy/rebel-forge.git"
  },
  "license": "UNLICENSED",
  "author": {
    "name": "Sidharth Yenireddy",
    "email": "sidhry1234@gmail.com"
  },
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish never",
    "pack": "electron-builder --dir",
    "publish": "electron-builder --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@blueprintjs/core": "^6.3.2",
    "antd": "^5.27.6",
    "kekule": "^1.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "build": {
    "appId": "com.sidreddyyenireddy.rebelforge",
    "productName": "Rebel Forge",
    "files": [
      "**/*",
      "!**/*.map",
      "!**/.*",
      "!dist/**",
      "!miew/**",
      "!scripts/**",
      "!pyscf/**",
      "!skala/**",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,tests,example,examples,doc,docs}/**"
    ],
    "asar": true,
    "npmRebuild": false,
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts",
        "filter": ["**/*"]
      },
      {
        "from": "pyscf",
        "to": "pyscf",
        "filter": [
          "**/*",
          "!examples/**"
        ]
      },
      {
        "from": "skala",
        "to": "skala",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.science",
      "target": ["zip"],
      "artifactName": "${productName}-${version}-${arch}-mac.${ext}",
      "identity": null
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "artifactName": "${productName}-${version}-${arch}-win.${ext}",
      "publisherName": "Sid Reddy"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    },
    "linux": {
      "maintainer": "Sidharth Yenireddy <sidhry1234@gmail.com>",
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ],
      "artifactName": "${productName}-${version}-${arch}-${os}.${ext}",
      "category": "Science"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "sidreddyyenireddy",
        "repo": "rebel-forge"
      }
    ]
  }
}
