{
  "name": "rebel-forge",
  "version": "1.0.6",
  "description": "RebelForge â€” DFT/quantum chemistry desktop app",
  "main": "dist/main/index.js",
  "author": {
    "name": "Sidharth Yenireddy",
    "email": "you@example.com"
  },
  "scripts": {
    "build": "electron-builder",
    "build:mac": "electron-builder -m",
    "build:win": "electron-builder --win nsis --x64",
    "build:linux": "electron-builder -l AppImage deb --x64"
  },
  "dependencies": {
    "electron-updater": "^6"
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.rebelforge.app",
    "productName": "RebelForge",
    "files": [
      "!dist/**",
      "!**/{test,tests}/**",
      "!**/{doc,docs}/**",
      "!**/examples/**"
    ],
    "extraResources": [
      {
        "from": "resources/pyscf",
        "to": "resources/pyscf",
        "filter": [
          "**/*",
          "!**/examples/**",
          "!**/doc*/**",
          "!**/*.md"
        ]
      },
      {
        "from": "resources/skala",
        "to": "resources/skala",
        "filter": [
          "**/*",
          "!**/examples/**",
          "!**/docs/**",
          "!**/*.md"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "RebelForge-${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "RebelForge-${version}-win-x64.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Sidharth Yenireddy <you@example.com>",
      "category": "Science",
      "artifactName": "RebelForge-${version}-linux-${arch}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "sidreddyyenireddy",
        "repo": "rebel-forge"
      }
    ]
  }
}
